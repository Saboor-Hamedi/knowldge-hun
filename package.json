{
  "name": "knowledgehub",
  "version": "0.0.9",
  "private": true,
  "description": "A minimal Electron application with TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "dist:publish": "npm run build && npx electron-builder --win --publish=never && npx dotenv-cli node scripts/publish.js",
    "icon:win": "npx electron-icon-maker --input=resources/icon.png --output=build && cp build/icons/win/icon.ico build/icon.ico && cp build/icons/mac/icon.icns build/icon.icns"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "chokidar": "^5.0.0",
    "d3": "^7.9.0",
    "d3-force": "^3.0.0",
    "electron-updater": "^6.7.3",
    "lucide": "^0.562.0",
    "monaco-editor": "^0.52.2"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "KnowledgeHub"
  },
  "build": {
    "appId": "com.example.knowledgehub",
    "productName": "KnowledgeHub",
    "win": {
      "artifactName": "${name}-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Saboor-Hamedi",
        "repo": "knowledge-hub"
      }
    ]
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.19.1",
    "archiver": "^7.0.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  }
}
